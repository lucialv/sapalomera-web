---
import Icon from "@/components/Icon.astro";

interface Props {
  title: string;
  icon: string;
  className?: string;
}

const { title, icon, className = "" } = Astro.props;
---

<div class={className}>
  <h3
    class="text-2xl font-semibold text-indigo-900 flex items-center gap-2 mb-4"
  >
    <Icon name={icon} class="w-6 h-6" />
    {title}
  </h3>
  <div>
    <slot />
  </div>
</div>
