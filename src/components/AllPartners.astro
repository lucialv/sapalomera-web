---
import PartnerLogo from "@/components/PartnerLogo.astro";
---

<div class="mt-16">
  <div class="border-t border-gray-200 pt-8 mb-8"></div>

  <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 mb-8">
    <PartnerLogo src="/images/cisco-logo.png" alt="Cisco Networking Academy" />
    <PartnerLogo
      src="/images/ms-imagine-logo.jpg"
      alt="Microsoft Imagine Academy"
    />
    <PartnerLogo src="/images/vmware-logo.png" alt="VMware Academy" />
    <PartnerLogo src="/images/red-hat-logo.png" alt="Red Hat Academy" />
  </div>

  <div class="grid grid-cols-2 sm:grid-cols-4 gap-8 mb-12">
    <PartnerLogo src="/images/aws-logo.png" alt="AWS Educate" />
    <PartnerLogo src="/images/oracle-logo.png" alt="Oracle Academy" />
    <PartnerLogo
      src="/images/cloudera-logo.png"
      alt="Cloudera Academic Partner"
    />
    <PartnerLogo
      src="/images/fpdual-logo.jpg"
      alt="FP DUAL"
      href="https://projectes.xtec.cat/fpdual/"
    />
  </div>

  <div class="flex justify-center">
    <img
      src="/images/logo-ministerio-educacion.jpg"
      alt="Ministerio de Educación y Formación Profesional - Fondo Social Europeo"
      class="h-12 object-contain"
    />
  </div>
</div>
